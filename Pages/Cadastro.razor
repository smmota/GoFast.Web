@page "/Cadastro"
@using GoFast.UI.DTO;
@using GoFast.UI.Services;
@inject IMotoristaService service

<h3>Cadastro</h3>

<div class="container-xl px-4 mt-4">
    <div class="row">
        <div class="col-xl-4">
            <!-- Profile picture card-->
            <div class="card mb-4 mb-xl-0">
                <div class="card-header">Documento</div>
                <div class="card-body text-center">
                    <!-- Profile picture image-->
                    <img class="img-account-profile rounded-circle mb-2" src="http://bootdey.com/img/Content/avatar/avatar1.png" alt="">
                    <!-- Profile picture help block-->
                    <div class="small font-italic text-muted mb-4">JPG ou PNG não pode ultrapassar 5 MB</div>
                    <!-- Profile picture upload button-->
                    <button class="btn btn-primary" @onclick="InputDocumento" type="button">Escolher Documento</button>
                </div>
            </div>
        </div>
        <div class="col-xl-8">
            <!-- Account details card-->
            <div class="card mb-4">
                <div class="card-header">Informaçoes do Motorista</div>
                <div class="card-body">
                    <form>
                        <!-- Form Group (username)-->
                        <div class="mb-3">
                            <label class="small mb-1" for="inputUsername">Nome Completo</label>
                            <input id="nameMotorista" class="form-control" type="text" placeholder="Digite nome completo" value="Lucas Marques">
                        </div>
                        <!-- Form Row-->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (first name)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputFirstName">Email</label>
                                <input class="form-control" id="inputFirstName" type="email" placeholder="Digite seu nome" value="nome@exemplo.com">
                            </div>
                            <!-- Form Group (last name)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputLastName">Data Nascimento</label>
                                <input class="form-control" id="inputLastName" type="date" placeholder="Insira seu nascimnto" value="06/10/1988">
                            </div>
                        </div>

                        <div class="card-header">Informações do Documento</div>

                        <div class="row gx-3 mb-3">
                            <!-- Form Group (last name)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputLastName">Tipo Documento</label>
                                <select class="form-control" name="inputLastName" id="inputLastName">
                                    <option value="0">CPF</option>
                                    <option value="1">CNPJ</option>
                                    <option value="2">Carteira_Motorista</option>
                                    <option value="3">Passaporte</option>
                                    <option value="4">Renavam</option>
                                    <option value="5">IPVA</option>
                                    <option value="6">Laudo_Cautelar</option>
                                </select>
                            </div>
                            <!-- Form Group (first name)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputFirstName">Número</label>
                                <input class="form-control" id="inputFirstName" type="text" placeholder="XXX-XXX-XXX-XX" value="000-000-000-00">
                            </div>
                        </div>
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (first name)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputFirstName">Data Expedição</label>
                                <input class="form-control" id="inputFirstName" type="date" placeholder="Insira a expedicao" value="06/10/2008">
                            </div>
                            <!-- Form Group (last name)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputFirstName">Data Renovação</label>
                                <input class="form-control" id="inputFirstName" type="date" placeholder="Insira a renovação" value="06/10/2018">
                            </div>
                        </div>

                        <div class="card-header">Informações de Endereço</div>

                        <!-- Form Row        -->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (organization name)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputOrgName">Rua</label>
                                <input class="form-control" id="inputOrgName" type="text" placeholder="Digite sua rua" value="Eudelio Ramos">
                            </div>
                            <!-- Form Group (location)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputLocation">Numero</label>
                                <input class="form-control" id="inputLocation" type="number" placeholder="Digite o número" value="230">
                            </div>
                        </div>
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (organization name)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputOrgName">CEP</label>
                                <input class="form-control" id="inputOrgName" type="text" placeholder="Digite seu CEP" value="03728-120">
                            </div>
                            <!-- Form Group (location)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputLocation">Bairro</label>
                                <input class="form-control" id="inputLocation" type="text" placeholder="Digite o bairro" value="Jardins">
                            </div>
                        </div>
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (organization name)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputOrgName">Cidade</label>
                                <input class="form-control" id="inputOrgName" type="text" placeholder="Digite sua Cidade" value="São Paulo">
                            </div>
                            <!-- Form Group (location)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputLocation">Estado</label>
                                <input class="form-control" id="inputLocation" type="text" placeholder="Digite o Estado" value="São Paulo">
                            </div>
                        </div>
                        <!-- Form Group (email address)-->
                        <div class="mb-3">
                            <label class="small mb-1" for="inputEmailAddress">Complemento</label>
                            <input class="form-control" id="inputEmailAddress" type="text" placeholder="Digite o Complemento" value="Proximo a escola">
                        </div>

                        <div class="card-header">Informaçoes do Carro</div>

                        <div class="row gx-3 mb-3">
                            <!-- Form Group (organization name)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputOrgName">Placa</label>
                                <input class="form-control" id="inputOrgName" type="text" placeholder="Digite sua placa" value="LLL1G99">
                            </div>
                            <!-- Form Group (location)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputLocation">Model</label>
                                <input class="form-control" id="inputLocation" type="text" placeholder="Digite o modelo" value="Fox">
                            </div>
                            <!-- Form Group (location)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputLocation">Ano De Fabricação</label>
                                <input class="form-control" id="inputLocation" type="date" placeholder="Insira o ano de fabricação" value="06/10/2018">
                            </div>
                        </div>
                        <!-- Save changes button-->
                        <button class="btn btn-primary" type="button">Cadastrar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

